<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="braude.motorsequence.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="New Participant"
            android:textSize="@dimen/activity_font_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Please fill all fields"
            android:textSize="@dimen/activity_font_subtitle" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edit_register_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edit_register_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edit_register_firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edit_register_lastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edit_register_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edit_register_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:textSize="@dimen/activity_font_regular" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <Spinner
                    android:id="@+id/edit_register_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/array_group"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_register_register"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:text="Submit" />
    </LinearLayout>

</ScrollView>
